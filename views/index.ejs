<html lang="en">
	<%- include("./partials/head.ejs") %>
	<body>
		<%- include("./partials/nav.ejs") %>
		<div class="blogs">
			<% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
				<div class='blog'>
					<video autoplay playsinline muted loop preload poster="https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/oceanshot.jpg">
						<source src="<%= blog.videoURL %>" />
					</video>
					<a href="/blogs/<%= blog._id %>">
						<div class='titleSnip'>
							<h3 class="title"><%= blog.title %></h3>
							<p class="snippet"><%= blog.snippet.length < 300 ? blog.snippet : blog.snippet.substr(0,300)+'...read more'  %></p>
						</div>
					</a>
				</div>
			<% }) %> <% } else { %>
			<p>There are no blogs to display...</p>
			<% } %>
		</div>
		<%- include("./partials/footer.ejs") %>

	</body>
</html>
